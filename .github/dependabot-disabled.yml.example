# Example: To disable Dependabot automatic PRs completely
# Rename this file to "dependabot.yml" to replace the current one

version: 2
updates:
  # Completely disable NPM dependency PRs
  - package-ecosystem: "npm"
    directory: "/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 0  # Set to 0 to disable PRs
    
  # Completely disable GitHub Actions PRs  
  - package-ecosystem: "github-actions"
    directory: "/"
    schedule:
      interval: "daily"
    open-pull-requests-limit: 0  # Set to 0 to disable PRs